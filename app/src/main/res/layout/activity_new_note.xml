<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".NewNoteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:clipToPadding="false"
        android:paddingBottom="10dp"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageBACK"
                android:layout_marginStart="10dp"
                android:background="@drawable/background_add_button"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="10dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@color/colorAccent"
                app:layout_constraintTop_toTopOf="@id/imageBACK"
                app:layout_constraintBottom_toBottomOf="@id/imageBACK"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:id="@+id/imageSave"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:id="@+id/inNote"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="50dp"
               android:text="NOTE......"
                android:layout_marginLeft="10dp"
                android:inputType="text"
             android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@id/imageBACK"
                ></TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/inputNoteTitle"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="Note  Title"
                android:textSize="20dp"
                android:paddingLeft="9dp"
                app:layout_constraintTop_toBottomOf="@+id/inNote"
                android:inputType="text"
                android:textColorHint="@color/colorTextHint"
                android:textColor="@color/colorTextHint"
                android:paddingTop="10dp"
                android:paddingBottom="10sp"
                ></EditText>
            <View
                android:layout_width="5sp"
                android:layout_height="0sp"
                android:layout_marginStart="12sp"
                app:layout_constraintTop_toTopOf="@id/inputNoteTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/inputNoteTitle"
                android:id="@+id/ViewSubtitleIndicator"
                android:background="@drawable/background_subtitle_indicator"
                android:layout_marginLeft="12sp"></View>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputNote"
                android:layout_marginStart="12dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="12sp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:hint="type your note here.......:)"
                android:inputType="textMultiLine"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputNoteTitle"


                android:layout_marginLeft="12dp"
                android:layout_marginRight="12sp">

            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
android:id="@+id/btnCreate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Add a Note"
        android:textSize="23dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_subtitle_indicator"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>